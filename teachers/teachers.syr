<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Teachers</title>
    <link rel="stylesheet" href="../index.css" />
    <link rel="stylesheet" href="./teachers.css" />
  </head>
  <body>
    <div id="teacher-slider" style="transform: translateX(0dvw)">
      <div id="mrs-k" class="teacher">
        {{ mrsk }}
        <button id="switch-teacher-button" onclick="switchTeacher()">Mrs. Jamie <img src="../assets/Arrow.png" /></button>
      </div>
      <div id="mrs-jamie" class="teacher">
        {{ mrsjamie }}
        <button id="switch-teacher-button" onclick="switchTeacher()"> <img src="../assets/Arrow.png" /> Mrs. K</button>
      </div>
    </div>

    <script>
      function getInitialTeacher(query = window.location.search) {
        const params = new URLSearchParams(query);
        return params.get("teacher");
      }

      let currentTeacher = getInitialTeacher();

      function switchTeacher(teacher) {
        const teachers = document.getElementById("teacher-slider");
        switch (currentTeacher) {
          case "mrsk":
            currentTeacher = "mrsjamie";
            teachers.style.transform = "translateX(0dvw)";
            break;

          case "mrsjamie":
            currentTeacher = "mrsk";
            teachers.style.transform = "translateX(-100dvw)";
            break;
        }
      }
      switchTeacher(currentTeacher);
    </script>

    <script>
        const imageContainers = document.getElementsByClassName("imageContainer");

        Array.from(imageContainers).forEach(container => {
            container.addEventListener("mouseover", function () {
                console.log("hovered");
                this.classList.add("expanded");
            });

            container.addEventListener("mouseout", function () {
                this.classList.remove("expanded");
            });

            container.addEventListener("click", function () {
                this.classList.toggle("expanded");
            });
        });
    </script>
  </body>
</html>
